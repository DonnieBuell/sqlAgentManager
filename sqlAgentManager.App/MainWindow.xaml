<Window x:Class="sqlAgentManager.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SQL Agent Manager" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="280"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListBox Grid.Column="0" Grid.RowSpan="2" Name="lbxJobs" SelectionChanged="lbxJobs_SelectionChanged" Margin="5"/>
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="5,5,5,0">
        </StackPanel>
        <Button Grid.Column="1" Grid.Row="2" Name="btnStart" Click="btnStart_Click" Content="Start Job" Margin="5"/>
    </Grid>
</Window>
